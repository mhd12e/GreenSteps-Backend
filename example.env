# Database Configuration
POSTGRES_USER=postgres
POSTGRES_DB=GreenSteps
POSTGRES_PASSWORD=your_secure_db_password_here
DATABASE_URL=postgresql://postgres:your_secure_db_password_here@db:5432/GreenSteps

# Service Configuration
SERVICE_NAME=greensteps-api

# Rate Limiting
# Note: These map to variables in core/config.py
RATE_LIMIT_STANDARD_PER_MINUTE=60
RATE_LIMIT_AUTH_PER_MINUTE=5
RATE_LIMIT_AI_PER_HOUR=10

# JWT Authentication
JWT_SECRET=changethis_to_a_super_secret_random_string_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30
MAX_REFRESH_TOKENS_PER_USER=5

# AI Model Configuration
GOOGLE_API_KEY=your_google_api_key_here
IMPACT_GENERATION_MODEL=gemini-2.5-flash
MATERIAL_TEXT_GENERATION_MODEL=gemini-2.5-flash
MATERIAL_IMG_GENERATION_MODEL=gemini-2.5-flash-image

# Cloudflare R2 Configuration
R2_ENDPOINT_URL=https://<accountid>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET=greensteps
R2_PUBLIC_URL=https://r2.devlix.org

# Cloudflare Turnstile
TURNSTILE_SECRET_KEY_AUTH=your_auth_secret_key
TURNSTILE_SECRET_KEY_AI_ACTIONS=your_ai_secret_key

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME=GreenSteps

# URLs
FRONTEND_URL=https://greensteps.devlix.org
BACKEND_URL=https://greensteps-api.devlix.org